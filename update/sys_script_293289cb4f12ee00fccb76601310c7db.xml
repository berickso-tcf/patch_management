        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	// Add your code here
	buildCIList();
	
	function buildCIList() {
		var ciArr = [];
		var pbaci = new GlideRecord('task_ci');
		pbaci.addQuery('task', current.baseline_item.sys_id);
		pbaci.query();
		while (pbaci.next()) {
			ciArr.push(pbaci.ci_item.toString());
		}
		if (ciArr.length > 0) {
			for (var i=0; i<ciArr.length; i++) {
				if (ciArr[i] == current.cmdb_ci.toString()) {
					continue;
				}
				var pdaci = new GlideRecord('task_ci');
				pdaci.initialize();
				pdaci.task = current.sys_id;
				pdaci.ci_item = ciArr[i];
				pdaci.insert();
			}
		}
	}
})(current, previous);]]></script>
